# HydroMate Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hydromate

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Authentication
SESSION_SECRET=your_super_secret_session_key_here
REPL_ID=your_repl_id_here
REPLIT_DOMAINS=localhost:5000,hydromate.ca,www.hydromate.ca

# Environment
NODE_ENV=development

# Optional: Payment Processing (for premium features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Optional: Email Service (for notifications)
EMAIL_SERVICE=your_email_service
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password

# Optional: Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Optional: Error Tracking
SENTRY_DSN=your_sentry_dsn_url