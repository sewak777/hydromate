# Database Configuration
DATABASE_URL=your_postgresql_connection_string

# Authentication (Replit OAuth)
REPL_ID=your_replit_app_id
SESSION_SECRET=your_session_secret_key
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-repl-domain.replit.app

# Stripe Configuration (SECURE - Server-side only)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id
STRIPE_ANNUAL_PRICE_ID=price_your_annual_price_id

# Weather API (Optional)
OPENWEATHER_API_KEY=your_openweather_api_key

# Feature Flags (Development only)
FF_AUTH_REQUIRED=false
FF_PREMIUM_REQUIRED=false
FF_MOCK_USERS=true
FF_MOCK_SUBSCRIPTIONS=false
FF_TEST_MODE=true

# Production Environment Variables (Set these in production)
NODE_ENV=production